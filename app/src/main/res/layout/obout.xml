<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<android.support.design.widget.AppBarLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/AppTheme.AppBarOverlay">
		<android.support.v7.widget.Toolbar
			android:id="@+id/_toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			app:popupTheme="@style/AppTheme.PopupOverlay"/>
	</android.support.design.widget.AppBarLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">
		<ScrollView
			android:id="@+id/vscroll2"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/bgfofapppage">
			<LinearLayout
				android:id="@+id/linear2"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:orientation="vertical">

                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="@drawable/top66short"
                    android:gravity="center_horizontal|bottom"
                    android:padding="8dp"
                    android:text="Бета"
                    android:textColor="#BDBDBD"
                    android:textSize="20sp"
                    android:textStyle="bold" />
				<TextView
					android:id="@+id/textview28"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="13dp"
					android:paddingRight="13dp"
					android:background="@drawable/cntr66"
					android:text="В данное время приложение находится на стадии разработки. Могут быть разного рода ошибки и недоработки. "
					android:textSize="16sp"
					android:textColor="#9E9E9E"/>
				<TextView
					android:id="@+id/textview2"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="13dp"
					android:paddingRight="13dp"
					android:paddingBottom="8dp"
					android:background="@drawable/bottom66"
					android:text="Об этом вы можете сообщить связавшись непосредственно с разработчиком. Способы связи указаны чуть ниже."
					android:textSize="16sp"
					android:textColor="#9E9E9E"/>
				<LinearLayout
					android:id="@+id/linear8"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical"/>
				<LinearLayout
					android:id="@+id/linear3"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"/>
				<TextView
					android:id="@+id/textview16"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingTop="12dp"
					android:paddingRight="8dp"
					android:paddingBottom="8dp"
					android:background="@drawable/top66short"
					android:gravity="center_horizontal|bottom"
					android:text="Контакты"
					android:textSize="25sp"
					android:textStyle="bold"
					android:textColor="#BDBDBD"
					android:layout_gravity="center_horizontal"/>
				<LinearLayout
					android:id="@+id/linear14"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="13dp"
					android:paddingTop="8dp"
					android:paddingRight="13dp"
					android:paddingBottom="8dp"
					android:background="@drawable/cntr66"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/imageview2"
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:src="@drawable/whatsapp"
						android:scaleType="fitCenter"/>
					<TextView
						android:id="@+id/textview34"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="WhatsApp"
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#9E9E9E"
						android:layout_gravity="center_vertical"
						android:gravity="center_horizontal"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear10"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="13dp"
					android:paddingTop="8dp"
					android:paddingRight="13dp"
					android:paddingBottom="8dp"
					android:background="@drawable/cntr66"
					android:orientation="horizontal">
					<Button
						android:id="@+id/button3"
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:padding="8dp"
						android:background="@drawable/iconinsta"
						android:textSize="12sp"
						android:textStyle="bold"
						android:textColor="#000000"/>
					<TextView
						android:id="@+id/textview19"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:gravity="center_horizontal"
						android:text="instagram"
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#9E9E9E"
						android:layout_gravity="center_vertical"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear11"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="13dp"
					android:paddingTop="8dp"
					android:paddingRight="13dp"
					android:paddingBottom="8dp"
					android:background="@drawable/cntr66"
					android:orientation="horizontal">
					<Button
						android:id="@+id/button2"
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:padding="8dp"
						android:background="@drawable/logotelega"
						android:textSize="12sp"
						android:textStyle="bold"
						android:textColor="#000000"/>
					<TextView
						android:id="@+id/textview18"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:gravity="center_horizontal"
						android:text="Телеграм"
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#9E9E9E"
						android:layout_gravity="center_vertical"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear9"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="13dp"
					android:paddingTop="8dp"
					android:paddingRight="13dp"
					android:paddingBottom="8dp"
					android:background="@drawable/bottom66"
					android:gravity="top"
					android:orientation="horizontal">
					<Button
						android:id="@+id/button1"
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:background="@drawable/iconemail"
						android:textSize="12sp"
						android:textStyle="bold"
						android:textColor="#000000"
						android:layout_gravity="left|top"/>
					<TextView
						android:id="@+id/textview17"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Электронная почта"
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#9E9E9E"
						android:layout_gravity="top"/>
				</LinearLayout>
				<TextView
					android:id="@+id/textview30"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingTop="8dp"
					android:paddingRight="8dp"
					android:background="@drawable/top66short"
					android:gravity="center_horizontal|bottom"
					android:text="Сайт"
					android:textSize="20sp"
					android:textStyle="bold"
					android:textColor="#BDBDBD"/>
				<TextView
					android:id="@+id/textview33"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="13dp"
					android:paddingTop="8dp"
					android:paddingRight="13dp"
					android:paddingBottom="8dp"
					android:background="@drawable/cntr66"
					android:text="Чтобы открыть сайт в браузере, выберите вариант"
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#9E9E9E"/>

                <TextView
                    android:id="@+id/textview31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cntr66"
                    android:paddingLeft="13dp"
                    android:paddingTop="8dp"
                    android:paddingRight="13dp"
                    android:paddingBottom="8dp"
                    android:text="— Главная ТАЛБА.РФ (требуется быстрый интернет)"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textview32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom66"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:text="— Облегченная версия ТАЛБА.РФ/minimal (работает даже в сетях 2g)"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />
				<TextView
					android:id="@+id/textview22"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="13dp"
					android:paddingTop="18dp"
					android:paddingRight="13dp"
					android:paddingBottom="8dp"
					android:background="@drawable/top66"
					android:gravity="center_vertical"
					android:text="Отправьте основную информацию о вашем устройстве, если у вас возникли проблемы с приложением."
					android:textSize="14sp"
					android:textStyle="bold|italic"
					android:textColor="#BDBDBD"/>
				<LinearLayout
					android:id="@+id/linear12"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="13dp"
					android:paddingTop="8dp"
					android:paddingRight="13dp"
					android:paddingBottom="8dp"
					android:background="@drawable/bottom66"
					android:orientation="horizontal">
					<Button
						android:id="@+id/button4"
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:padding="8dp"
						android:background="@drawable/ic_info_grey"
						android:textSize="12sp"
						android:textColor="#000000"
						android:layout_gravity="center_vertical"/>
					<TextView
						android:id="@+id/textview23"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:gravity="center_horizontal|center_vertical"
						android:text="основные характеристики устройства. Можно просто скопировать и вставить в сообщении"
						android:textSize="16sp"
						android:textStyle="bold|italic"
						android:textColor="#BDBDBD"
						android:layout_gravity="center_horizontal|center_vertical"/>
					<TextView
						android:id="@+id/textview21"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:gravity="center_vertical"
						android:text="получить информацию об устройстве"
						android:textSize="12sp"
						android:textColor="#9E9E9E"
						android:layout_gravity="center_vertical"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear13"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:padding="8dp"
					android:background="@drawable/cntr66"
					android:orientation="vertical">
					<TextView
						android:id="@+id/textview20"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingLeft="13dp"
						android:paddingTop="8dp"
						android:paddingRight="13dp"
						android:paddingBottom="8dp"
						android:background="#FFF9C4"
						android:textSize="12sp"
						android:textStyle="bold|italic"
						android:textColor="#000000"
						android:alpha="0.5"/>
					<Button
						android:id="@+id/button5"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="18dp"
						android:paddingTop="8dp"
						android:paddingRight="18dp"
						android:paddingBottom="8dp"
						android:background="@drawable/button"
						android:gravity="center_horizontal|center_vertical"
						android:text="Скопировать"
						android:textSize="12sp"
						android:textStyle="bold"
						android:textColor="#000000"/>
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
		<LinearLayout
			android:id="@+id/linear1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"/>
	</LinearLayout>
</android.support.design.widget.CoordinatorLayout>
